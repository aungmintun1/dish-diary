doctype html
html
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
      link(rel='stylesheet' href='/css/product.css')
      link(rel='stylesheet' href='/css/shop.css')
      link(rel="stylesheet", href="/css/header.css")
      link(rel="stylesheet", href="/css/footer.css")
      link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css' rel='stylesheet')

      title Dish Diary
   
  body
   header.header
    .header-content
     img.header-icon(src="/img/websiteImg/header-icon3.png", alt="website icon")
     h2 Dish Diary
     nav
      ul
       - if (user)
        li 
         a(href="/") home
        li
         a(href="/shop") shop
        li 
         a.cart-li(href="#cart")
          i.fas.fa-shopping-cart
        
        li 
         a.logout-li(href="/logout") logout

        img.header-profile(src=`/img/users/${user.photo}` alt='user photo')
        li
         a(href="/account")= user.name
       - else
        li
          a(href="/login") login

   section.product-section     
    img.product-image(src=`/img/products/${product.photo}`, alt="product photo")
    div.product-content
     h2.product-name= product.name  
     p.product-price $#{product.price} 
     .product-line   
     - if (product.type === "clothing")
      p.size-text Size
      .size-button-container 
       button(data-size='small').size-btn.small S
       button(data-size='medium').size-btn.medium M
       button(data-size='large').size-btn.large L
     p.quantity-text Quantity 
     .button-container 
      button.atc-subtract-btn -
      p.atc-quantity 1
      button.atc-add-btn +
     button(data-productId= product.id).addToCart-btn ADD TO CART
     p.product-description Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed vehicula nisl eu justo varius, vel consequat justo scelerisque.
     p.product-material Material is 100% Lorem ipsum dolor sit amet, consectetur adipiscing elit

    .modal#cart
     a(href="#shop").popout-button
     h3 Shopping Cart 
     .line 
     .item-section
      each product in cart.items
       .cart-item 
        img(src=`/img/products/${product.item.photo}`, alt="cart item").item-picture
        .item-content 
         h3= product.item.name
         p.cart-item-name $#{product.item.price}.00
         -if(product.size)
          p.cart-item-size size: #{product.size}
         
         .button-container
          if product.quantity > 1
           button(data-productId=product.item.id data-quantity=product.quantity).subtract-btn -
          else 
           button(data-productId=product.item.id).delete-item-btn 
            i.fas.fa-trash-alt
          p.quantity= product.quantity
          button(data-productId=product.item.id data-quantity=product.quantity).add-btn +
     
     .subtotal   
      h3 Subtotal 
      p.subtotal-number $#{totalPrice}.00
     button.checkout-btn Check Out

   footer 
    .link-container
     .social
      h3 Dish Diary  
      p Recipes you want to make. Cooking advice that works. Restaurant recommendations you trust.
      .social-media-container 
       i.fab.fa-facebook.fa-2x
       i.fab.fa-twitter.fa-2x   
       i.fab.fa-pinterest.fa-2x 
       i.fab.fa-instagram.fa-2x 
       i.fab.fa-youtube.fa-2x   
     .more-from 
      h3 More from Dish Diary 
      a(href="#") Masthead
      a(href="#") Newsletter Sign Up 
      a(href="#") Dish Diary Media Kit
      a(href="#") Find Us On The App
      a(href="#") Stream
     .contact-footer 
      h3 Contact
      a(href="#") Subscription FAQ's
      a(href="#") Careers
    .footer-links 
     a(href="#") User Agreement
     a(href="#") Privacy Policy
